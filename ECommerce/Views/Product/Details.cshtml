        ////////// Artı eksi butonlarını ayarla //////////////////

        document.addEventListener("click", function(event){
            console.log("Çalıştı");

            if (event.target.classList.contains("inc") || event.target.classList.contains("dec")){
                console.log("İf içerisindeyiz")
                //miktarı değiştir

                const container = event.target.closest(".pro-qty");
                const inputItem = container.querySelector(".item-count");

                const quantity = container.querySelector(".item-count").value;
                let neweQuantity =  parseInt(quantity, 10);
                    if (event.target.classList.contains("inc")){
                        console.log("Miktar arttı");
                        neweQuantity += 1;
                    }
                    else{
                        if (quantity == 1){
                            Swal.fire({
                                title: "Hata!",
