                            });
                            return;
                        }
                        neweQuantity -= 1;
                    }

                    inputItem.value = neweQuantity;


            }
        });





        /////////// SEPETE ÜRÜN EKLEME ////////////////////////////


            document.addEventListener("click", function(event) {
            
            const button = event.target.closest(".add-to-cart-btn");
            if (!button) return;

            event.preventDefault();

            let productId;
            let quantity = 1;

            
            const productItem = button.closest(".product__item");
            if (productItem) {
                const input = productItem.querySelector(".item-count"); 
                if (input) {
                    quantity = parseInt(input.value, 10);
                    if (quantity <= 0) {
                        Swal.fire({
                            title: "Hata!",
                            text: "Ürün miktarı 1'den az olamaz",
                            icon: "warning"
                        });
                        return;
                    }
                }
                productId = productItem.querySelector(".product-id")?.value;
            } else {
                
                productId = document.getElementById("productId")?.value;
                const mainQuantityInput = document.querySelector(".product__details__quantity .item-count");
                if (mainQuantityInput) {
                    quantity = parseInt(mainQuantityInput.value, 10) || 1;
                    if (quantity <= 0) {
                        Swal.fire({
                            title: "Hata!",
                            text: "Ürün miktarı 1'den az olamaz",
                            icon: "warning"
                        });
                        return;
                    }
                }
            }

            if (!productId) {
                console.error("Product ID bulunamadı!");
                return;
            }

            console.log("Sepete ekleniyor: ", productId, "Quantity:", quantity);

            fetch("/Cart/AddItemToCart", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ ProductId: productId, Quantity: quantity })
            })
            .then(res => res.json())
            .then(data => {
                if (data.message) {
                    Swal.fire({
                        title: "Başarılı!",
                        text: data.message,
                        icon: "success",
                        timer: 1500,
                        showConfirmButton: false
                    });
                }
                if (window.updateCartDiv) window.updateCartDiv();
            })
            .catch(err => {
                console.error(err);
                Swal.fire({
                    title: "Hata!",
                    text: "Ürün eklenemedi",
                    icon: "error"
                });
            });
        });

            ////////////////////////////// Resme tıklanınca ürüün detay sayfasına gitme //////////////////

            const productDivs = document.querySelectorAll(".product__item__pic");
            productDivs.forEach(pic =>{

                    pic.addEventListener("click",function(event){

                        if (!event.target.closest("a")) {
                            const featuredItem = event.target.closest(".product__item");
                        const productId = featuredItem.querySelector(".product-id").value;

                        window.location.href = `/Product/Details/${productId}`
                        }

                    });

            });



    </script>



}
