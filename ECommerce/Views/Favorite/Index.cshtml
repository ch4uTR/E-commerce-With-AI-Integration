@model List<FavoriteItemDTO>

@{
    var featuringCategories = Model.Select(li => li.Product.Category)
                                    .Distinct()
                                    .ToList();

    var FeaturingProducts = Model.Select(li => li.Product)
                                .ToList();
}



<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Beğendiğiniz Ürünler</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Hepsi</li>
                        @foreach (var category in featuringCategories)
                        {
                            <li data-filter=".@category.Slug">@category.Name</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">

            @foreach (var favItem in Model)
            {
                var product = favItem.Product;
                <div class="col-lg-3 col-md-4 col-sm-6 mix @product.Category.Slug">
                    <div class="featured__item">
                        <input type="hidden" class="product-id" value="@product.Id" />
                        <input type="hidden" class="list-item-id" value="@favItem.Id"/>
                        <div class="featured__item__pic set-bg" data-setbg="@product.ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a class="remove-from-list-btn"><i class="fa-solid fa-heart-crack"></i></a></li>
                                <li><a class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></h6>
                            <h5>@product.Price TL</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



@section Scripts{


    <script>
        document.addEventListener("DOMContentLoaded", function(){


            //sayfayı yenile

            function refreshPage(){


                fetch("/Favorite/GetFavoriteListItems")
                .then(res => res.json())
                .then(res => {

                    if (res.success){

                        const div = document.querySelector(".row featured__filter");
                        div.innerHTML = ``;

                        res.data.forEach(favItem =>{

                            const product = favItem.product;
                            const row = `
                            <div class="col-lg-3 col-md-4 col-sm-6 mix ${product.Category.Slug}">
                                <div class="featured__item">
                                    <input type="hidden" class="product-id" value="${product.id}" />
                                    <input type="hidden" class="list-item-id" value="${favItem.id}"/>
                                    <div class="featured__item__pic set-bg" data-setbg="${product.imageUrl}">
                                        <ul class="featured__item__pic__hover">
                                            <li><a class="remove-from-list-btn"><i class="fa-solid fa-heart-crack"></i></a></li>
                                            <li><a class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="featured__item__text">
                                        <h6><a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="${product.id}">${product.name}</a></h6>
                                        <h5>${product.price} TL</h5>
                                    </div>
                                </div>
                            </div>
                            `;
                            div.innerHTML += row;

                        });


                    }
                    else{
                        //hata!
                    }


                })
                .catch(error => {

                    console.error(error);
                });
            }




                
            //////////////       SEPETE ÜRÜN EKLEME /////////////////
            const cartButtons = document.querySelectorAll(".add-to-cart-btn");
            console.log(cartButtons.length);

            cartButtons.forEach(button => {
                button.addEventListener("click", (event) => {
                    event.preventDefault();
                    event.stopPropagation();

                    const productItem = event.currentTarget.closest(".featured__item");
                    const productId = productItem.querySelector(".product-id").value;

                    console.log("Sepete eklendi ", productId);

                    fetch("/Cart/AddItemToCart", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ ProductId: productId })
                        })
                    .then(response => response.json())
                    .then(data => {
                        console.log("Sepet güncellendi", data);
                        if(data.message){
                            Swal.fire({
                                title: "Başarılı!",
                                text: data.message,
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false
                            });
                        }
                        window.updateCartDiv();
                    })
                    .catch(error => {
                           console.error(error);
                           Swal.fire({
                               title: "Hata!",
                               text: "Ürün eklenemedi",
                               icon: "error"
                           })
                    });

                });
            });

             //// favorilerden sil

            const favoriteButtons = document.querySelectorAll(".remove-from-list-btn");
            console.log(favoriteButtons.length);
            favoriteButtons.forEach(button => {

                 button.addEventListener("click", (event) => {
                    event.preventDefault();
                    event.stopPropagation();

                    const listItem = event.currentTarget.closest(".featured__item");
                    const listItemId = listItem.querySelector(".list-item-id").value;
                    console.log(listItemId);

                    fetch(`/Favorite/RemoveItemFromList?listItemId=${listItemId}`)
                    .then(response => response.json())
                    .then(res => {
                        console.log("Favorilerden sil  tetiklendi", res);
                        if(res.success){
                            Swal.fire({
                                title: "Başarılı!",
                                text: res.message,
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false
                            });
                            refreshPage();
                        }
                        else{
                            Swal.fire({
                               title: "Hata!",
                               text: res.message,
                               icon: "error"
                           })
                        }
                    })
                    .catch(error => {
                           console.error(error);
                           Swal.fire({
                               title: "Hata!",
                               text: "Ürün favorilerinden silinirken bir problem karşılaşıldı",
                               icon: "error"
                           })
                    });
                });

            });





        }); //domloaded bitti


       

        



            ///Listeyi güncelle





    </script>



}