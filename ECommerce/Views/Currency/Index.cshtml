@using ECommerce.Models;
@model List<CurrencyDTO>;





<div class="container">
    <div class="row g-3">

        @foreach (var currency in Model)
        {
            @if (currency.Success)
            {
                <div class="col-md-4">

                    <div class="card shadow-sm">
                        <div class="card-title text-center mt-2">@currency.Name</div>
                        <div class="card-body text-center">
                            <div class="card-text">@currency.Value</div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
