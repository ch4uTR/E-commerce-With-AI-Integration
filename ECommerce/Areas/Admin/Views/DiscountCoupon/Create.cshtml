@model ECommerce.Models.DiscountCoupon

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 shadow-sm rounded-4 border-0">
                <div class="card-header border-0 rounded-4 text-center mb-4" style="background-color: #7fad39; color: white;">
                    <h3 class="mb-0">
                        <i class="fa fa-plus-circle"></i> Create New Coupon
                    </h3>
                </div>

                <div class="card-body">
                    <form method="post" asp-controller="DiscountCoupon" asp-action="Create">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Coupon Name</label>
                                <input asp-for="Name" class="form-control rounded-pill">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DiscountAmount" class="form-label">Discount Amount</label>
                                <input asp-for="DiscountAmount" class="form-control rounded-pill">
                                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DiscountPercentage" class="form-label">Discount %</label>
                                <input asp-for="DiscountPercentage" class="form-control rounded-pill">
                                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="UsageLimit" class="form-label">Usage Limit</label>
                                <input asp-for="UsageLimit" class="form-control rounded-pill">
                                <span asp-validation-for="UsageLimit" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ExpiresAt" class="form-label">Expires At</label>
                                <input asp-for="ExpiresAt" type="date" class="form-control rounded-pill">
                                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4 gap-2">
                            <button type="submit" class="site-btn btn-xs">Create</button>
                            <a class="site-btn btn-xs" asp-action="Index">Coupons</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-xs {
        padding: .25rem .5rem;
        font-size: .75rem;
        line-height: 1.5;
        border-radius: .2rem;
    }
</style>
