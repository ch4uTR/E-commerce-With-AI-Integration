<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="E-Commerce Admin Panel">
    <meta name="keywords" content="Admin, Dashboard">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">


    <style>
        .sidebar-link.active {
            background-color: #7fad39;
            color: #fff !important;
            font-weight: bold;
        }

        .sidebar-link:hover {
            background-color: #e6f0e6;
            color: #7fad39 !important;
        }
    </style>
</head>

<body>
    <header class="header bg-white border-bottom shadow">
        <div class="container-fluid">
            <div class="row align-items-center py-2">
                <div class="col-lg-6 col-md-6">
                    <div class="header__logo">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="admin-link"><h4 style="color: #7fad39;"><i class="fa fa-cogs"></i> Admin Panel</h4></a>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 d-flex align-items-center justify-content-end">
                    <div class="header__top__right">
                        <div class="header__top__right__auth d-flex">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="d-flex align-items-center me-3 text-muted">
                                    <i class="fa fa-user me-1"></i> @User.Identity.Name
                                </span>
                                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="text-decoration-none text-dark">
                                        <i class="fa fa-sign-out"></i> Logout
                                    </a>
                                </form>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none text-dark">
                                    <i class="fa fa-user me-1"></i> Login
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid mt-4">
        <div class="row g-4">
            <div class="col-lg-3 col-md-4">
                <div class="card p-4 shadow-lg rounded-4 border-0 h-100">
                    <h5 class="fw-bold" style="color: #7fad39;">
                        <i class="fa fa-tachometer-alt"></i> Dashboard
                    </h5>
                    <hr class="mt-2 mb-3">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Product" asp-action="Index" class="sidebar-link d-block text-decoration-none text-dark fw-bold py-2 px-3 rounded-pill">
                                <i class="fa fa-shopping-cart"></i> Products
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Category" asp-action="Index" class="sidebar-link d-block text-decoration-none text-dark fw-bold py-2 px-3 rounded-pill">
                                <i class="fa fa-tags me-2"></i> Categories
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Comment" asp-action="Index" class="sidebar-link d-block text-decoration-none text-dark fw-bold py-2 px-3 rounded-pill">
                                <i class="fa fa-comments me-2"></i> Comments
                            </a>                        
                        </li>
                        <li class="mb-2">
                            <a asp-controller="DiscountCoupon" asp-action="Index" class="sidebar-link d-block text-decoration-none text-dark fw-bold py-2 px-3 rounded-pill">
                                <i class="fa fa-ticket me-2"></i> Coupons
                            </a>
                        </li>
                        @await RenderSectionAsync("SidebarContent", required: false)
                    </ul>
                </div>
            </div>

            <div class="col-lg-9 col-md-8">
                <div class="p-4 rounded shadow-lg">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>
        $(document).ready(function() {
            var path = window.location.pathname;
            $('ul.list-unstyled a.sidebar-link').each(function() {
                if (this.pathname === path) {
                    $(this).addClass('active');
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)


    <!-- Js Plugins -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/mixitup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>


</body>


<style>
.admin-link {
    color: #7fad39 !important; /* Başlık rengini zorla yeşil yapar */
    text-decoration: none !important; /* Altı çizili olmasını engeller */
}

/* Linkin üzerine gelindiğinde (hover) rengini değiştirir */
.admin-link:hover {
    color: #5f8d2e !important; /* Hafif koyu bir yeşil */
}


</style>
</html>