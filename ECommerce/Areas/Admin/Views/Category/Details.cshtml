@model CategoryViewModel 


<div class="container mt-4">
    <div class="card p-4 shadow-sm rounded-4 border-0">
        <h3 class="card-title text-center mb-4" style="color: #7fad39;">
            <i class="fa fa-info-circle"></i> Category Details
        </h3>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 rounded-4 overflow-hidden shadow-sm">
                    <img class="card-img-top"
                         src="@(string.IsNullOrEmpty(Model.ImageUrl) ? ViewBag.DefaultImagePath : Model.ImageUrl)"
                         alt="@Model.Name"
                         style="max-height: 300px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@Model.Name</h5>
                        <p class="card-text text-muted">Total Products: @Model.TotalProductCount</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="table-responsive rounded-4 shadow-sm overflow-hidden">
                    <table class="table table-hover mb-0">
                        <thead style="background-color: #7fad39; color: white;">
                            <tr>
                                <th>Property</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Name</strong></td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Total Products</strong></td>
                                <td>@Model.TotalProductCount</td>
                            </tr>
                            <tr>
                                <td><strong>Total Revenue</strong></td>
                                <td style="color: #7fad39; font-weight: bold;">@Model.TotalRevenue.ToString("C2")</td>
                            </tr>
                            <tr>
                                <td><strong>Actions</strong></td>
                                <td class="d-flex justify-content-start gap-2">
                                    <a class="site-btn btn-xs" asp-action="Edit" asp-route-id="@Model.Id">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="site-btn btn-xs">
                                            <i class="fa fa-trash-o"></i> Delete
                                        </button>
                                    </form>
                                    <a class="site-btn btn-xs" asp-action="Index">
                                        <i class="fa fa-list"></i> Categories
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}