@model ECommerce.Models.DTOs.CategoryRequest



<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 shadow-sm rounded-4 border-0">
                <div class="card-header border-0 rounded-4 text-center mb-4" style="background-color: #7fad39; color: white;">
                    <h3 class="mb-0">
                        <i class="fa fa-plus-circle"></i> Create New Category
                    </h3>
                </div>

                <div class="card-body">
                    <form method="post" asp-controller="Category" asp-action="Create" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Name</label>
                                <input asp-for="Name" class="form-control rounded-pill">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Upload a photo</label>
                            <input type="file" class="form-control" asp-for="ImageFile">
                        </div>

                        <div class="d-flex justify-content-end mt-4 gap-2">
                            <button type="submit" class="site-btn btn-xs">Create</button>
                            <a class="site-btn btn-xs" asp-action="Index">Categories</a>          
                        </div
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
.btn-xs {
padding: .25rem .5rem;
font-size: .75rem;
line-height: 1.5;
border-radius: .2rem;
}
</style>